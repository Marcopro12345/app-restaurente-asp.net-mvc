@model APPRESTAURANTE.Models.M_Reservacion

@{
    ViewBag.Title = "Elimina Reservaciones";
}

<h2>Eliminar Reservación</h2>

<h3>Está seguro que desea eliminar esta Reservación? </h3>
<div>

    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.numero_reservacion)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.numero_reservacion)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.id_cliente)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.id_cliente)
        </dd>

    </dl>

    @using (Html.BeginForm("Acciones", "Reservacion", FormMethod.Post, new { enctype = "multipart/form-data", @id = "frmReservaciones" }))
    {
        @Html.AntiForgeryToken()

        @Html.HiddenFor(w => w.numero_reservacion, new { @id = "hdnId" })

        @Html.HiddenFor(w => w.id_cliente, new { @id = "hdnId" })

        @Html.HiddenFor(w => w.numero_mesa, new { @id = "hdnId" })






        <div class="form-actions no-color">
            <button type="submit" id="btnEliminar" name="submitButton" value="Eliminar" class="btn btn-primary"
                    title="Agregar" data-toggle="tooltip" data-container="body"
                    data-placement="right">
                Eliminar
            </button>
            @Html.ActionLink("Regresar", "ListReservaciones")
        </div>
    }
</div>