@model APPRESTAURANTE.Models.M_Menu

@{
    ViewBag.Title = "Eliminar Menus";
}

<h2>Elimina Menú</h2>

<h3>Está seguro que desea eliminar este Menú? </h3>
<div>
    
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.descripcion)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.descripcion)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.precio)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.precio)
        </dd>

    </dl>

    @using (Html.BeginForm("Acciones", "Menu", FormMethod.Post, new { enctype = "multipart/form-data", @id = "frmMenus" }))
    {
        @Html.AntiForgeryToken()

        @Html.HiddenFor(w => w.id, new { @id = "hdnId" })

        @Html.HiddenFor(w => w.descripcion, new { @id = "hdnId" })

        @Html.HiddenFor(w => w.precio, new { @id = "hdnId" })






        <div class="form-actions no-color">
            <button type="submit" id="btnEliminar" name="submitButton" value="Eliminar" class="btn btn-primary"
                    title="Agregar" data-toggle="tooltip" data-container="body"
                    data-placement="right">
                Eliminar
            </button>
            @Html.ActionLink("Regresar", "ListMenus")
        </div>
    }
</div>